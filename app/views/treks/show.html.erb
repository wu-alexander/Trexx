  <div class="container">
    <h1><%= @trek.name %></h1>
    <p><%= @trek.description %></p>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-6 col-md-4">
      <p>Start location: <%= @trek.start_location %></p>
