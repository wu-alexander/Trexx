<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h1>Create a new trek!</h1>

      <%= simple_form_for(@trek) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :start_location %>
        <%= f.input :difficulty, collection: [ "Easy", "Moderate", "Hard", "Extreme" ] %>
        <%= f.input :duration_days %>
        <%= f.input :price %>
        <%= f.submit class: "btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
