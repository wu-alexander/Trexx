<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h1>Update your profile</h1>

      <%= simple_form_for(@user) do |f| %>
        <%= f.input :photo %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :age %>
        <%= f.input :gender, collection: [ "Male", "Female", "Non-binary", "I prefer not to say" ] %>
        <%= f.submit class: "btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
