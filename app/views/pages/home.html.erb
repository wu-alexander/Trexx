<div class="container">
  <h2 class="text-center">Most popular Hikes in your area</h2>
  <div class="cards">
    <% @nearby_treks.each do |trek| %>
      <div class="card">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="https://source.unsplash.com/random/200x250/?nature, <%= rand(1..99) %>" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://source.unsplash.com/random/200x250/?nature, <%= rand(1..99) %>" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://source.unsplash.com/random/200x250/?nature, <%= rand(1..99) %>" class="d-block w-100" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>




        <br>
        <h4><%= trek.name %></h4>
        <p>$<%= trek.price %></p>
        <%= link_to "Details", trek %>
      </div>
    <% end %>
  </div>

  <%= link_to "Explore", treks_path, class: 'btn btn-dark' %>
