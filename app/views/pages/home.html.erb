<div class="home-banner">

  <div class="container">
    <h2 class="title">Your next great adventure is waiting.</h2>
    <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-primary">
          <i class="fas fa-search"></i> Discover treks!
        </button>
      </div>
    </form>
  </div>
<br>
<div class="container">
  <h2 class="text-center">Most popular Hikes in your area</h2>
  <div class="cards">
    <% @nearby_treks.each do |trek| %>
      <div class="card">
        <img src="https://source.unsplash.com/random/200x250/?nature" alt="">
        <br>
        <h4><%= trek.name %></h4>
        <p><%= trek.description %></p>
        <p><%= trek.price %> $</p>
        <%= link_to "Details", trek %>
      </div>
    <% end %>
  </div>
  <%= link_to "Explore all treks", treks_path, class: 'btn btn-dark' %>
  <br>
  <br>
  <br>
</div>
