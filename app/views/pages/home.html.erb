<div class="container" id="cards-slider">
  <h2 class="text-center">Welcome to Trexx.<br>Here are a few adventures near you.</h2>
  <div class="cards">
    <% @nearby_treks.each do |trek| %>
      <div class="card">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="https://source.unsplash.com/random/?mountain-peak, <%= rand(1..99) %>" class="d-block w-80" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://source.unsplash.com/random/?mountain-peak, <%= rand(1..99) %>" class="d-block w-80" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://source.unsplash.com/random/?mountain-peak, <%= rand(1..99) %>" class="d-block w-80" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
        <br>
        <h4><%= trek.name %></h4>
        <p><%= trek.start_location %></p>
        <%= link_to "Details", trek %>
      </div>
    <% end %>
  </div>
  <%= link_to "Explore More", treks_path, class: 'btn btn-dark' %>
</div>
