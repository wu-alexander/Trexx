<div class="container" id="cards-slider">
  <h2 class="text-center", id="title">Welcome to Trexx</h2>
  <p class= "text-center", id="subtitle">Here are a few adventures we think you'd love</p>
  <div class="cards">
    <% @nearby_treks.each do |trek| %>
      <div class="card">
        <div id="carouselExampleControls<%= trek.id %>" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item">
              <img src="https://source.unsplash.com/collection/1705422, <%= rand(1..99) %>" class="d-block w-80" alt="...">
            </div>
            <div class="carousel-item active">
              <img src="https://source.unsplash.com/collection/1705422, <%= rand(1..99) %>" class="d-block w-80" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://source.unsplash.com/collection/1705422, <%= rand(1..99) %>" class="d-block w-80" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls<%= trek.id %>" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls<%= trek.id %>" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
        <br>
        <h4><%= trek.name %></h4>
        <p><%= trek.start_location %></p>
        <%= link_to "Details", trek %>
      </div>
    <% end %>
  </div>
</div>
