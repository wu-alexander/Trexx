<div class="home-banner">
  <div class="container pt-5">
    <div class="row justify-content-center">
      <div class="col-lg-6">
      <h5><%= @trek.name %> / <%= @trek.duration_days %> days / $<%= @trek.price %></h5>
        <br>
        <h1>Book this trek!</h1>
        <br>
        <%= simple_form_for [ @trek, @booking ] do |f| %>
          <%= f.input :start_on, html5: true, label: "On what date do you want to start?" %>
          <%= f.input :num_trekkers, label: "Number of people", as: :integer, input_html: { min: '0' } %>
          <%= f.submit class: "btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
