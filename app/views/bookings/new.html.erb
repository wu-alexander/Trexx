<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h1>Book this trek!</h1>
      <h2><%= @trek.name %></h2>

      <%= simple_form_for [ @trek, @booking ] do |f| %>
        <%= f.input :start_on, html5: true, label: "Start date" %>
        <%= f.input :num_trekkers, label: "Number of people" %>
        <%= f.submit class: "btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
